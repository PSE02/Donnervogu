= flash[:notice]
%br
= form_for @group do |f| 
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li
            = msg
  
  %fieldset
    %legend Create Group
    %table
      %tr
        %td
          = f.label :name
        %td
          = f.text_field :name
      %tr
        %td  
          = submit_tag("Create")

