!!! XML
!!!
%html
  %head
    %title= TBMS
    = stylesheet_link_tag 'style', :media => 'screen'
    = javascript_include_tag 'markdown'
    = javascript_include_tag 'textarea'
    = csrf_meta_tag
  %body
    .global
      .header
        %h1 Thunderbird Control Center
        ver. 2.0
      .navigation
        = link_to "Email Accounts", emailaccounts_path
        |
        = link_to "Groups", groups_path
        |
        = link_to "Import", account_url(:current)
        .login
          = link_to "Logout", logout_path
      .main
        .contentOne
          = yield
        .contentTwo
          = render :template => 'overview/show'
      .footer
        ver 2.0



