!!! XML
!!!
%html
  %head
    %title= "TBMS - Thunderbird Control Center"
    = stylesheet_link_tag 'style', :media => 'screen'
    = javascript_include_tag :defaults
    = javascript_include_tag 'textarea'
    = csrf_meta_tag
  %body
    .global
      .header
        .img
          %img{:src => "/images/logo.png", :alt => "Logo"}
        .title
          %h1 Thunderbird Control Center
      .navigation
        = link_to "Email Accounts", emailaccounts_path
        |
        = link_to "Groups", groups_path
        |
        = link_to "Import", account_url(:current)
        |
        = link_to "Log", log_messages_path
        .login
          %a(href="https://github.com/fadendaten/Donnervogu/blob/tbconf-install/tbconf/tbconf.xpi?raw=true")Get Plugin
          |
          - if current_user_session
            = link_to "Logout", logout_path
          - else
            = link_to "Login", login_path
      .main
        .contentOne
          = yield
        .contentTwo
          = render :template => 'overview/show'
      .footer
        ver 4.0



