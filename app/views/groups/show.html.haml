%notice
  = flash[:notice]
= javascript_include_tag 'jquery-1.5.2.min.js'
%br
%table
  %tr
    %td
      %b Name:
    %td
      = @profile.name
  %tr
    %td
      %b Group
    %td= @profile.group.to_s
  %tr
%a#showMem(href="#")See all Members

%table.users#show
  %tr
    %th Name
    %th Email
    %th
    %th
  - @profile.groups.each do |group|
    %tr
      %td= group.name
      %td
      %td= link_to 'Show', group
      %td= link_to 'Delete', group, :confirm => "Do you really want to delete #{group.name}?", :method => :delete
  - @profile.emailaccounts.each do |email|
    %tr
      %td= email.name
      %td= email.email
      %td= link_to 'Show', email
      %td= link_to 'Delete', email, :confirm => "Do you really want to delete #{email.name}?", :method => :delete

%br
%hr
%br
= render "shared/preferences"
%br
= link_to 'Edit', edit_group_path(@profile)
|
= link_to 'Back', groups_path

:javascript

  $("#show").hide();
  var show = true;
  $("#showMem").click(function () {
        if(show){ 
          $("#show").show();
          show = false;
        }
        else {
           $("#show").hide();
           show = true;
        }
        return true;
      });