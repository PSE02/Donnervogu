
/************************** Quotes *******************************/ 
// 0=reply below 1=reply above 2=select the quote 
user_pref("mail.identity.id1.reply_on_top", true); 
// enable quoting for replies 
user_pref("mail.identity.id1.auto_quote", true); 

/************************** Signature Text ***********************/  
// true=allow html in signature false=don't allow html in signature 
user_pref("mail.identity.id1.htmlSigFormat", "true"); 
// this is the part where the signature is saved if it's no file 
user_pref("mail.identity.id1.htmlSigText", "ttt"); 

/************************** Signature Style **********************/  
// true=below the quote false=below my reply 
user_pref("mail.identity.id1.sig_bottom", true); 
// add signatur to replies 
user_pref("mail.identity.id1.sig_on_reply", true); 
/************************** HTML *********************************/ 
// 0=ask, 1=plain, 2=html, 3=both 
pref("mail.default_html_action", 2); 
// true=Messages in HTML false=Messages not in HTML 
user_pref("mail.identity.id1.compose_html", true); 
